<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Ecommerce Suite">
 
          <test name="Smoke + Regression Tests">
        <groups>
             <define name = "SR">
             <include name = "regression"/>
             <include name = "smoke"/>
             <include name = "sanity"/>
             </define>
            <run>
                <include name="SR"/>
            </run>
        </groups>
        
        <classes>
            <class name="day_28.EcommerceTests">
                <methods>
                    <!-- Explicitly include setup method -->
                    <include name="setup"/>
                    <!-- Also include all smoke tests -->
                    <include name=".*"/>
                </methods>
            </class>
        </classes>
    </test>
 
 
</suite>
 
 